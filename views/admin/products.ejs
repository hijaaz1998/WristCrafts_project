<script>
    // Function to toggle the product's status
    function toggleProduct(productId) {
        const checkbox = document.querySelector(`#input_${productId}`);

        // Send a fetch request to /admin/deleteProduct based on the checkbox state
        fetch('/admin/deleteProduct', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: productId }),
        })
            .then(response => {
                if (!response.success) {
                    throw new Error('Network response was not ok');
                }
                // return response.json();
                

            })
            .then(data => {
                // Handle the JSON response if needed
                console.log(data);

                // Update the checkbox state based on the response
                if (data.success) {
                    checkbox.checked = !checkbox.checked;
                } else {
                    console.error('Failed to toggle product status');
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
            });
    }
</script>