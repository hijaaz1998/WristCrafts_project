    <script>
        function validate(){
            const couponName = document.getElementById('name');
            const validity = document.getElementById('validity');
            const minPurchase = document.getElementById('minPurchase');
            const discountPercent = document.getElementById('discountPercent');
            const maxDiscountValue = document.getElementById('maxDiscountValue');

            const couponNameError = document.getElementById('couponNameError');
            const validityError = document.getElementById('validityError');
            const minPurchaseError = document.getElementById('minPurchaseError');
            const discountPercentError = document.getElementById('discountPercentError');
            const maxDiscountValueError = document.getElementById('maxDiscountValueError');


            if(couponName.value.trim() === ''){
                couponNameError.innerHTML = 'Coupon Name is required'
                couponNameError.style.color = 'red';
                setTimeout(() => {
                    couponNameError.innerHTML = ''
                }, 5000)
                return false;
            }

            if(validity.value.trim() === ''){
                validityError.innerHTML = 'Validity is required'
                validityError.style.color = 'red';
                setTimeout(() => {
                    validityError.innerHTML = ''
                }, 5000)
                return false;
            }

            if(!(/^\d+$/.test(validity.value)) || parseInt(validity.value) <= 0){
                validityError.innerHTML = 'Validity should be a atleast one day'
                validityError.style.color = 'red';
                setTimeout(() => {
                    validityError.innerHTML = ''
                }, 5000)
                return false;
            }

            if(minPurchase.value.trim() === ''){
                minPurchaseError.innerHTML = 'Minimum Purchase is required'
                minPurchaseError.style.color = 'red';
                setTimeout(() => {
                    minPurchaseError.innerHTML = ''
                }, 5000)
                return false;
            }

            if (!(/^\d+$/.test(minPurchase.value)) || parseInt(minPurchase.value) <= 2000) {
                // alert(parseInt(minPurchase.value))
                minPurchaseError.innerHTML = ' Minimum Purchase should be above 2000 '
                minPurchaseError.style.color = 'red';
                setTimeout(() => {
                    minPurchaseError.innerHTML = ''
                }, 5000)
                return false;
            }

            if(discountPercent.value.trim() === ''){
                discountPercentError.innerHTML = 'Discount is required'
                discountPercentError.style.color = 'red';
                setTimeout(() => {
                    discountPercentError.innerHTML = ''
                }, 5000)
                return false;
            }

            if (!(/^\d+$/.test(discountPercent.value)) || (parseInt(discountPercent.value) <= 0) || (parseInt(discountPercent.value) > 50)) {
                discountPercentError.innerHTML = 'Max Discount is 1 to 50 percent'
                discountPercentError.style.color = 'red';
                setTimeout(() => {
                    discountPercentError.innerHTML = ''
                }, 5000)
                return false;
            }

            if(maxDiscountValue.value.trim() === ''){
                maxDiscountValueError.innerHTML = 'Max Discount is required'
                maxDiscountValueError.style.color = 'red';
                setTimeout(() => {
                    maxDiscountValueError.innerHTML = ''
                }, 5000)
                return false;
            }

            if (!(/^\d+$/.test(maxDiscountValue.value)) || (parseInt(maxDiscountValue.value) <= 0) || (parseInt(maxDiscountValue.value) > 10000)) {
                maxDiscountValueError.innerHTML = 'Max Discount is 1 to 10000'
                maxDiscountValueError.style.color = 'red';
                setTimeout(() => {
                    maxDiscountValueError.innerHTML = ''
                }, 5000)
                return false;
            }
            
            return true;
        }



        
